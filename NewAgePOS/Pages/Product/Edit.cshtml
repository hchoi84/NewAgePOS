@page "{id:min(1)}"
@model NewAgePOS.Pages.Product.EditModel
@{
  ViewData["Title"] = "Edit";
}

<form method="post">
  @if (TempData["Message"] != null)
  {
    <div class="text-info">@TempData["Message"]</div>
  }
  @Html.ValidationSummary(true, "", new { @class = "text-danger h4" })
  <div class="form-row">
    <div class="form-group col mb-1">
      <label asp-for="Sku"></label>
      <input readonly asp-for="Sku" class="form-control" />
      <span asp-validation-for="Sku" class="text-danger"></span>
    </div>
    <div class="form-group col mb-1">
      <label asp-for="Upc"></label>
      <input readonly asp-for="Upc" class="form-control" />
      <span asp-validation-for="Upc" class="text-danger"></span>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col mb-1">
      <label asp-for="Cost"></label>
      <input asp-for="Cost" class="form-control" />
      <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div class="form-group col mb-1">
      <label asp-for="Price"></label>
      <input asp-for="Price" class="form-control" />
      <span asp-validation-for="Price" class="text-danger"></span>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col mb-1">
      <label asp-for="AllName"></label>
      <input asp-for="AllName" class="form-control" />
      <span asp-validation-for="AllName" class="text-danger"></span>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Update</button>
  <a asp-page="Search" class="btn btn-primary">Cancel</a>
</form>