@page
@model NewAgePOS.Pages.Report.TransactionHistoryModel
@{
  ViewData["Title"] = "Transaction History";
  CultureInfo dollar = new CultureInfo("en-US");
  float earning = 0;
}

<h1 class="font-weight-bold text-center my-3">@ViewData["Title"]</h1>

<form method="get" class="mb-5">
  <div class="form-row">
    <div class="form-group col">
      <label asp-for="BeginDate"></label>
      <input asp-for="BeginDate" class="form-control" />
    </div>
    <div class="form-group col">
      <label asp-for="EndDate"></label>
      <input asp-for="EndDate" class="form-control" />
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Transactions != null && Model.Transactions.Any())
{
  List<TransactionModel> ts = Model.Transactions;

  for (var i = 0; i < ts.Count; i++)
  {
    int multiplier = 1;
    if (ts[i].Type == TypeEnum.Refund) multiplier = -1;

    float amount = ts[i].Amount * multiplier;
    if (ts[i].Method == MethodEnum.Cash) earning += amount;

    if (i == 0 || ts[i].SaleId != ts[i - 1].SaleId)
    {
      <h4 class="text-center mt-3">@ts[i].SaleId</h4>
    }

    <div class="form-row">
      <div class="col">
        <input readonly value="@ts[i].Created.ToString("MM/dd hh:mm tt")" class="form-control" />
      </div>
      <div class="col">
        <input readonly value="@ts[i].Method.ToString()" class="form-control" />
      </div>
      <div class="col">
        <input readonly value="@amount.ToString("C2", dollar)" class="form-control" />
      </div>
    </div>
  }

  <div style="max-width: 350px; margin: auto;">
    <h4 class="mt-5 mb-3 text-center">Summary</h4>
    <div class="row">
      <div class="col">Transactions</div>
      <div class="col text-right">@Model.Transactions.Count</div>
    </div>
    <div class="row">
      <div class="col">Earning</div>
      <div class="col text-right">@earning.ToString("C2", dollar)</div>
    </div>
  </div>
}