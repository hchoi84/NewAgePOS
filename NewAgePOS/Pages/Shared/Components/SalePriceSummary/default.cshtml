@model NewAgePOSModels.Models.SalePriceSummaryModel

  <div class="mt-5" style="max-width: 425px;">
    <div class="row">
      <div class="col-4 h4">Subtotal</div>
      <div class="col-5 h4 text-right">@Model.Subtotal.ToString("C2", Model.Dollar)</div>
    </div>
    <div class="row">
      <div class="col-4 h4">Discount</div>
      <div class="col-5 h4 text-right">@Model.Discount.ToString("C2", Model.Dollar)</div>
    </div>
    <div class="row">
      <div class="col-4 h4">Tax @Model.TaxPct %</div>
      <div class="col-5 h4 text-right">@Model.Tax.ToString("C2", Model.Dollar)</div>
    </div>
    <div class="row">
      <div class="col-4 h4">Total</div>
      <div class="col-5 h4 text-right">@Model.Total.ToString("C2", Model.Dollar)</div>
    </div>
  </div>