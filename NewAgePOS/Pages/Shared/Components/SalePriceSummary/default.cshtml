@model NewAgePOS.ViewModels.Shared.PriceSummaryViewModel

<div class="mt-5" style="max-width: 425px;">
  <div class="row">
    <div class="col-4 h4">Subtotal</div>
    <div class="col-5 h4 text-right">@Model.Quantity</div>
  </div>
  <div class="row">
    <div class="col-4 h4">Subtotal</div>
    <div class="col-5 h4 text-right">@Model.Subtotal.ToString("C2", Model.Dollar)</div>
  </div>
  @if (Model.Discount > 0)
  {
    <div class="row">
      <div class="col-4 h4">Discount</div>
      <div class="col-5 h4 text-right">@Model.Discount.ToString("C2", Model.Dollar)</div>
    </div>
  }
  @if (Model.TaxPct > 0)
  {
    <div class="row">
      <div class="col-4 h4">Tax @Model.TaxPct %</div>
      <div class="col-5 h4 text-right">@Model.TaxAmt.ToString("C2", Model.Dollar)</div>
    </div>
  }
  <div class="row">
    <div class="col-4 h4">Total</div>
    <div class="col-5 h4 text-right">@Model.Total.ToString("C2", Model.Dollar)</div>
  </div>
  @if (Model.Paid > 0)
  {
    <div class="row">
      <div class="col-4 h4">Paid</div>
      <div class="col-5 h4 text-right">@Model.Paid.ToString("C2", Model.Dollar)</div>
    </div>
  }
  @if (Model.Remaining != Model.Total)
  {
    <div class="row">
      <div class="col-4 h4">Paid</div>
      <div class="col-5 h4 text-right">@Model.Remaining.ToString("C2", Model.Dollar)</div>
    </div>
  }
  @if (Model.Change > 0)
  {
    <div class="border-top border-bottom border-dark m-1" style="height: 10px"></div>

    <div class="row">
      <div class="col-4 h4">Change</div>
      <div class="col-5 h4 text-right">@Model.Change.ToString("C2", Model.Dollar)</div>
    </div>
  }
</div>