@page "{saleid:min(1)}"
@model NewAgePOS.Pages.Sale.GuestModel
@{
  ViewData["Title"] = "Sales Customer";
}

<h1 class="font-weight-bold text-center my-3">@ViewData["Title"]</h1>

@if (TempData["Message"] != null)
{
  <div class="text-danger mt-3 text-center">@TempData["Message"]</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h4 class="mt-5 text-center">CUSTOMER INFO</h4>
<form method="post" class="mt-3">
  <div class="form-row">
    <input hidden asp-for="Guest.Id" />
    <div class="form-group col">
      <label asp-for="Guest.FirstName"></label>
      <input asp-for="Guest.FirstName" class="form-control">
      <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col">
      <label asp-for="Guest.LastName"></label>
      <input asp-for="Guest.LastName" class="form-control">
      <span asp-validation-for="Guest.LastName" class="text-danger"></span>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col">
      <label asp-for="Guest.EmailAddress"></label>
      <input asp-for="Guest.EmailAddress" class="form-control">
      <span asp-validation-for="Guest.EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group col">
      <label asp-for="Guest.PhoneNumber"></label>
      <input asp-for="Guest.PhoneNumber" class="form-control">
      <span asp-validation-for="Guest.PhoneNumber" class="text-danger"></span>
    </div>
  </div>

  <button asp-page-handler="UseInput" type="submit" class="btn btn-primary">Submit New Customer</button>

  @if (@Model.Guest.Id != 0)
  {
    <button asp-page-handler="Edit" type="submit" class="btn btn-primary">Edit Customer</button>
    <a asp-page="/Sale/Checkout" asp-route-saleid="@Model.SaleId" class="btn btn-success">Proceed to Checkout</a>
  }
  else
  {
    <a asp-page="/Sale/Checkout" asp-route-saleid="@Model.SaleId" class="btn btn-secondary">Proceed as Guest</a>
  }
</form>