@page "{saleid:min(1)}"
@model NewAgePOS.Pages.Sale.GuestModel
@{
  ViewData["Title"] = "Checkout";
}

@if (TempData["Message"] != null)
{
  <div class="text-info mt-3 h5">@TempData["Message"]</div>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<h3 class="mt-5">CUSTOMER INFO</h3>
<form method="post" class="mt-3">
  <div class="form-row">
    <input hidden asp-for="Id" />
    <div class="form-group col">
      <label asp-for="FirstName"></label>
      <input asp-for="FirstName" class="form-control">
      <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group col">
      <label asp-for="LastName"></label>
      <input asp-for="LastName" class="form-control">
      <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col">
      <label asp-for="EmailAddress"></label>
      <input asp-for="EmailAddress" class="form-control">
      <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group col">
      <label asp-for="PhoneNumber"></label>
      <input asp-for="PhoneNumber" class="form-control">
      <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
  </div>

  <button asp-page-handler="UseInput" type="submit" class="btn btn-primary">Submit New Customer</button>

  @if (@Model.Id != 0)
  {
    <button asp-page-handler="Edit" type="submit" class="btn btn-primary">Edit Customer</button>
  }
  else
  {
    <a asp-page="/Sale/Checkout" asp-route-saleid="@Model.SaleId" class="btn btn-secondary">Use Guest</a>
  }

  <a asp-page="/Sale/Checkout" asp-route-saleid="@Model.SaleId" class="btn btn-success">Proceed to Checkout</a>
</form>