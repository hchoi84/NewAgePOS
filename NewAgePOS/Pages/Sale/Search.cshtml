@page
@using NewAgePOS.Utilities
@model NewAgePOS.Pages.Sale.SearchModel
@{
  ViewData["Title"] = "Search";
}

<form method="get">
  <div class="form-row">
    <div class="col">
      <select asp-for="SearchMethod" asp-items="Model.SearchMethods" class="form-control" onchange='searchQueryMsg("searchQueryMsg")'>
        <option value="">---Choose Method---</option>
      </select>
    </div>
    <div class="col">
      <input asp-for="SearchQuery" class="form-control" />
    </div>
  </div>
  <div class="form-row">
    <div class="col">
      <button type="submit" class="btn btn-primary mt-1">Search</button>
    </div>
    <div class="col">
      <span id="searchQueryMsg" class="small text-info"></span>
    </div>
  </div>
</form>

@if (Model.Results != null)
{
  <h3 class="mt-5">Results</h3>
  @if (TempData["Message"] != null)
  {
    <div class="text-danger">@TempData["Message"]</div>
  }

  <div class="container">
    @foreach (var result in Model.Results)
    {
      if (result != Model.Results.First())
      {
        <div class="mt-3"></div>
      }

      <div class="row">
        <div class="col-5 border rounded bg-dark">@result.Created.ToString("yyyy/MM/dd")</div>
        <div class="col-2 border rounded bg-dark">@result.SaleId</div>
        <div class="col-5 border rounded bg-dark">@result.PhoneNumber</div>
      </div>
      <div class="row">
        <div class="col-6 border rounded bg-dark">@result.FullName</div>
        <div class="col-6 border rounded bg-dark">@result.EmailAddress</div>
      </div>
      <div class="row">

        @if (result.IsComplete)
        {
          <a asp-page="/Sale/Refund" asp-route-saleid="@result.SaleId" class="btn btn-warning mt-1">Refund</a>
          <a asp-page="/Sale/Receipt" asp-route-saleid="@result.SaleId" class="btn btn-primary mt-1 ml-1">Receipt</a>
        }
        else
        {
          <a asp-page="/Sale/Cart" asp-route-saleid="@result.SaleId" class="btn btn-success mt-1">Continue</a>

          <form asp-page-handler="CancelSale" asp-route-saleid="@result.SaleId">
            <button type="submit" class="btn btn-danger ml-1 mt-1">Cancel Sale</button>
          </form>
        }
      </div>
    }
  </div>
}

@section Scripts{
  <script src="~/js/site.js" asp-append-version="true"></script>
}